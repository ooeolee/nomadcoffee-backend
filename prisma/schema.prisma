// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String @unique
  email String @unique
  name String
  location String?
  password String
  avatarURL String?
  githubUsername String?
  followers User[]  @relation("FolowRelation")
  following User[]  @relation("FolowRelation")
  coffeeshops CoffeeShop[]
}

model CoffeeShopPhoto {
  id Int @id @default(autoincrement())
  url String
  shop CoffeeShop @relation(fields: [shopId], references: [id])
  shopId Int
} 
model CoffeeShop {
  id  Int @id @default(autoincrement())
  name String
  latitude String
  longitude String
  user User @relation(fields: [userId], references: [id])
  userId Int
  categories Category[]
  photos CoffeeShopPhoto[]
}

model Category {
  id Int @id @default(autoincrement())
  name String
  slug String
  shops CoffeeShop @relation(fields: [shopId], references: [id])
  shopId Int
}
